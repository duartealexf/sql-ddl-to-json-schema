{
  "name": "sql-ddl-to-json-schema",
  "version": "0.0.1",
  "description": "A grammar and stream-friendly SQL parser.",
  "main": "index.js",
  "scripts": {
    "standard-version": "node_modules/.bin/standard-version",
    "nearley-test": "node_modules/nearley/bin/nearley-test.js lib/compiled/grammar.js",
    "nodemon-watch": "nodemon -w lib -w src -w test -e ne,js --ignore lib/compiled",
    "nearleyc": "node_modules/nearley/bin/nearleyc.js",
    "eslint": "node_modules/.bin/eslint",
    "ava": "node_modules/ava/cli.js",
    "pretest": "yarn run build",
    "test": "ava --color",
    "lint": "eslint lib test",
    "prebuild": "node src/parser/assembly.js",
    "build": "nearleyc lib/compiled/grammar.ne > lib/compiled/grammar.js",
    "test:watch": "yarn run nodemon-watch --exec 'yarn run test'",
    "build:watch": "yarn run nodemon-watch --exec 'yarn run build'",
    "example": "node src/parser/example.js",
    "prerelease": "yarn run lint",
    "release": "standard-version && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duartealexf/sql-ddl-to-json-schema.git"
  },
  "author": "duartealexf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duartealexf/sql-ddl-to-json-schema/issues"
  },
  "dependencies": {
    "nearley": "^2.11.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.7.0",
    "fs-extra": "^5.0.0",
    "moo": "^0.4.3",
    "nodemon": "^1.14.11",
    "standard-version": "^4.3.0",
    "winston": "^3.0.0-rc0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
